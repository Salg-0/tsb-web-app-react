name: PR Validations

on:
  pull_request: 
    branches: [main]
    
  workflow_dispatch:

jobs:
  assign-label-to-pr:
    name: Assign Labels to PR
    runs-on: ubuntu-latest
    
    steps:
      - uses: codelytv/pr-size-labeler@v1
        with:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          xs_max_size: '10'
          s_max_size: '100'
          m_max_size: '500'
          l_max_size: '1000'
          fail_if_xl: 'false'
          
          
      - uses: actions/labeler@v3
        with:
          repo-token: "${{ secrets.GITHUB_TOKEN }}"
          
        # Add 'root' label to any root file changes
        root:
        - '*'

        components:
        - src/components/*

        pages:
        - src/Pages/*

        config:
        - src/config/*

        contexts:
        - src/contexts/*

        utils:
        - src/utils/*

        public:
        - public/*

        docs:
        - *.md

  commitlint:
    name: Validate Commit Messages
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
        with:
          fetch-depth: 0
      - uses: wagoid/commitlint-github-action@v4


  
